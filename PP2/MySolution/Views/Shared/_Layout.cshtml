<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyProject</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Tu CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body data-bs-theme="auto">
    <header class="border-bottom mb-4">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cpu"></i> BinOps
                </a>
                <div class="d-flex gap-2">
                    <button id="themeToggle" type="button" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-moon-stars"></i> Tema
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="container py-4 text-center small text-body-secondary">
        Hecho en ASP.NET Core MVC • .NET 8
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validación cliente (opcional pero recomendado) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Dark mode toggle simple -->
    <script>
      (function () {
        const key = "theme-preference";
        const btn = document.getElementById("themeToggle");
        const apply = v => document.body.setAttribute("data-bs-theme", v);
        const saved = localStorage.getItem(key);
        if (saved) apply(saved);

        btn?.addEventListener("click", () => {
          const cur = document.body.getAttribute("data-bs-theme") || "auto";
          const next = cur === "dark" ? "light" : "dark";
          apply(next);
          localStorage.setItem(key, next);
        });
      })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
